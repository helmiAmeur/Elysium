<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>


    <changeSet id="20220218161531-1" author="jhipster">
        <createTable tableName="thread">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="creation_date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="board_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20220218161531-1-relations" author="jhipster">

    </changeSet>

    <changeSet id="20220218161531-1-data" author="jhipster" context="faker">
        <loadData
                  file="config/liquibase/fake-data/thread.csv"
                  separator=";"
                  tableName="thread">
            <column name="id" type="numeric"/>
            <column name="title" type="string"/>
            <column name="description" type="string"/>
            <column name="creation_date" type="date"/>
            <column name="user_id" type="numeric"/>
            <column name="board_id" type="numeric"/>
        </loadData>
    </changeSet>

</databaseChangeLog>
